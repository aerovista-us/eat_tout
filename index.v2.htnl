    </main>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast" role="status" aria-live="polite">
    <div class="toastTop">
      <div>
        <div class="toastTitle" id="toastTitle">Timer done</div>
        <div class="toastMsg" id="toastMsg">Check the thickest part and temp it.</div>
      </div>
      <button class="btn x" id="toastClose" type="button" aria-label="Close notification">‚úï</button>
    </div>
  </div>

  <script>
    // ---------- State ----------
    const state = {
      servings: 2,
      flavor: "classic",
      timers: {
        oven: null,
        grill: null,
        pan: null
      }
    };

    // ---------- Helpers ----------
    const $ = (sel, root=document) => root.querySelector(sel);
    const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));

    function clamp(n, a, b){ return Math.max(a, Math.min(b, n)); }
    function roundNice(n){
      // Friendly rounding for tsp/tbsp amounts
      const r = Math.round(n * 4) / 4; // quarters
      return (r % 1 === 0) ? String(r) : String(r).replace(".25","¬º").replace(".5","¬Ω").replace(".75","¬æ");
    }

    // ---------- Toggles ----------
    const storyMode = $("#storyMode");
    const compactMode = $("#compactMode");
    storyMode.addEventListener("change", () => {
      document.body.classList.toggle("storyMode", storyMode.checked);
      if(storyMode.checked && compactMode.checked){
        compactMode.checked = false;
        document.body.classList.remove("compactMode");
      }
    });
    compactMode.addEventListener("change", () => {
      document.body.classList.toggle("compactMode", compactMode.checked);
      if(compactMode.checked && storyMode.checked){
        storyMode.checked = false;
        document.body.classList.remove("storyMode");
      }
    });

    // Print
    $("#printBtn").addEventListener("click", () => window.print());

    // ---------- Servings scaler ----------
    const servings = $("#servings");
    const servingsLabel = $("#servingsLabel");
    servings.addEventListener("input", () => {
      state.servings = parseInt(servings.value, 10);
      servingsLabel.textContent = state.servings;
      renderFlavor();
    });

    // ---------- Flavor paths ----------
    const FLAVORS = {
      classic: {
        name: "Lemon‚ÄìDill Butter (Classic)",
        desc: "Clean, bright, and unfairly good.",
        ingredients: (s) => [
          `${roundNice(1 * s)} tbsp butter (or ${roundNice(1 * s)} tbsp olive oil)`,
          `${roundNice(0.5 * s)} lemon(s) (slices + squeeze)`,
          `${roundNice(0.5 * s)} tsp kosher salt (adjust to taste)`,
          `${roundNice(0.25 * s)} tsp black pepper`,
          `${roundNice(1 * s)} tbsp chopped dill (or parsley)`,
          `${roundNice(0.5 * s)} clove(s) garlic, minced`
        ],
        how: () => [
          `Oven: butter + lemon + herbs on top; optional foil canoe for crisp edges.`,
          `Grill: oil skin; add butter/herbs; lemon at the end.`,
          `Pan: finish with butter + lemon after heat is off.`
        ],
        story: "This is the ‚ÄòCDA lake breeze‚Äô profile. It tastes like you knew exactly what you were doing the whole time."
      },
      cajun: {
        name: "Cajun Campfire",
        desc: "Smoky, spicy, lodge swagger.",
        ingredients: (s) => [
          `${roundNice(1 * s)} tsp Cajun seasoning`,
          `${roundNice(0.5 * s)} tsp smoked paprika`,
          `${roundNice(1 * s)} tbsp butter`,
          `${roundNice(1 * s)} tsp oil (high heat)`,
          `${roundNice(0.25 * s)} lemon(s) (finish squeeze)`
        ],
        how: () => [
          `Grill/Pan: season flesh side; start skin-side down; finish with butter melt.`,
          `Oven: sprinkle seasoning, add butter on top; watch for over-browning (drop to 400¬∞F if needed).`,
          `Optional: tiny pinch of brown sugar for a campfire crust.`
        ],
        story: "This one‚Äôs for the moment you look at the plate and think, ‚Äòyeah‚Ä¶ I could sell this at a lake festival.‚Äô"
      },
      honeysoy: {
        name: "Honey‚ÄìSoy Glaze",
        desc: "Sticky shine, sweet-savory finish.",
        ingredients: (s) => [
          `${roundNice(1 * s)} tsp honey`,
          `${roundNice(1 * s)} tsp soy sauce`,
          `${roundNice(0.5 * s)} tsp lemon juice`,
          `${roundNice(0.25 * s)} tsp garlic (minced or powder)`,
          `${roundNice(0.5 * s)} tsp oil`
        ],
        how: () => [
          `Grill: brush glaze in the last 2 minutes (avoid burning).`,
          `Oven: brush at minute 8‚Äì10 for fillets; finish 2‚Äì3 minutes.`,
          `Pan: reduce heat at the end, glaze for 30‚Äì60 seconds, then off heat.`
        ],
        story: "This is the ‚Äòglass finish‚Äô flavor. The trout comes out looking like it just got a fresh coat of confidence."
      },
      caper: {
        name: "Butter‚ÄìCaper ‚ÄúRestaurant Mode‚Äù",
        desc: "Instant fancy without acting fancy.",
        ingredients: (s) => [
          `${roundNice(1.5 * s)} tbsp butter`,
          `${roundNice(0.75 * s)} tbsp capers (drained)`,
          `${roundNice(0.5 * s)} tsp lemon juice`,
          `${roundNice(0.25 * s)} clove(s) garlic, minced`,
          `Splash of water (1‚Äì2 tbsp) to emulsify`
        ],
        how: () => [
          `Pan: after flipping/finishing, off heat ‚Üí butter + capers + lemon + splash water, swirl.`,
          `Oven: spoon sauce over right after cooking; let it melt into the fish.`,
          `Grill: best as a finishing sauce after the fish comes off.`
        ],
        story: "The plate says ‚Äòrestaurant.‚Äô Your face says ‚ÄòI totally meant to do that.‚Äô Everyone wins."
      }
    };

    function setFlavor(key){
      state.flavor = key;
      $$(".flavor").forEach(el => el.setAttribute("aria-selected", String(el.dataset.flavor === key)));
      renderFlavor();
    }

    function renderFlavor(){
      const f = FLAVORS[state.flavor];
      $("#flavorName").textContent = f.name;

      const ing = $("#flavorIngredients");
      ing.innerHTML = "";
      f.ingredients(state.servings).forEach(line => {
        const li = document.createElement("li");
        li.textContent = line;
        ing.appendChild(li);
      });

      const how = $("#flavorHow");
      how.innerHTML = "";
      f.how().forEach(line => {
        const li = document.createElement("li");
        li.textContent = line;
        how.appendChild(li);
      });

      $("#flavorStory").textContent = f.story;
    }

    // Flavor selection click + keyboard
    $$(".flavor").forEach(el => {
      el.addEventListener("click", () => setFlavor(el.dataset.flavor));
      el.addEventListener("keydown", (e) => {
        if(e.key === "Enter" || e.key === " "){
          e.preventDefault();
          setFlavor(el.dataset.flavor);
        }
      });
    });

    // Initial render
    renderFlavor();

    // ---------- Scroll spy ----------
    const spyTabs = new Map($$(".tab").map(a => [a.dataset.spy, a]));
    const sections = ["basics","choose","flavors","oven","grill","pan","sides"]
      .map(id => document.getElementById(id))
      .filter(Boolean);

    const io = new IntersectionObserver((entries) => {
      // pick the entry most visible
      const visible = entries
        .filter(e => e.isIntersecting)
        .sort((a,b) => b.intersectionRatio - a.intersectionRatio)[0];
      if(!visible) return;

      const id = visible.target.id;
      spyTabs.forEach(tab => tab.removeAttribute("aria-current"));
      const t = spyTabs.get(id);
      if(t) t.setAttribute("aria-current","true");
    }, { root: null, threshold: [0.35, 0.5, 0.65] });

    sections.forEach(s => io.observe(s));

    // ---------- Timers ----------
    const toast = $("#toast");
    const toastTitle = $("#toastTitle");
    const toastMsg = $("#toastMsg");
    $("#toastClose").addEventListener("click", () => toast.classList.remove("show"));

    function fmtTime(sec){
      const m = Math.floor(sec / 60);
      const s = sec % 60;
      return `${m}:${String(s).padStart(2,"0")}`;
    }

    const displays = {
      oven: $("#timerOvenDisplay"),
      grill: $("#timerGrillDisplay"),
      pan: $("#timerPanDisplay"),
    };

    function setDisplay(which, text){
      if(displays[which]) displays[which].innerHTML = `‚è±Ô∏è ${which[0].toUpperCase()+which.slice(1)} timer: <b>${text}</b>`;
    }

    function stopTimer(which){
      const t = state.timers[which];
      if(t){
        clearInterval(t.tick);
        state.timers[which] = null;
      }
      setDisplay(which, "‚Äî");
    }

    function stopAllTimers(){
      stopTimer("oven");
      stopTimer("grill");
      stopTimer("pan");
      toast.classList.remove("show");
    }
    $("#stopAllTimers").addEventListener("click", stopAllTimers);

    function startTimer(which, minutes){
      stopTimer(which);

      const total = minutes * 60;
      let left = total;

      setDisplay(which, fmtTime(left));
      const tick = setInterval(() => {
        left = Math.max(0, left - 1);
        setDisplay(which, fmtTime(left));
        if(left <= 0){
          clearInterval(tick);
          state.timers[which] = null;

          // toast
          toastTitle.textContent = `${which.toUpperCase()} timer done`;
          toastMsg.textContent = `Check thickest part: flake + temp (~145¬∞F). If you used glaze, brush now / finish now.`;
          toast.classList.add("show");

          // gentle beep (where allowed)
          try{
            const ctx = new (window.AudioContext || window.webkitAudioContext)();
            const o = ctx.createOscillator();
            const g = ctx.createGain();
            o.type = "sine";
            o.frequency.value = 880;
            g.gain.value = 0.03;
            o.connect(g); g.connect(ctx.destination);
            o.start();
            setTimeout(()=>{ o.stop(); ctx.close(); }, 180);
          }catch(_){}
        }
      }, 1000);

      state.timers[which] = { tick, total };
    }

    // preset buttons
    $$("[data-timer]").forEach(btn => {
      btn.addEventListener("click", () => {
        const which = btn.dataset.timer;
        const min = parseInt(btn.dataset.min, 10);
        startTimer(which, min);
      });
    });

    // ---------- Tiny mascot parallax ----------
    (function(){
      const mascot = document.querySelector('.mascot');
      if(!mascot) return;
      const prefersReduced = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if(prefersReduced) return;

      let raf = null;
      function onMove(e){
        const r = mascot.getBoundingClientRect();
        const cx = r.left + r.width/2;
        const cy = r.top + r.height/2;
        const x = (e.clientX - cx) / r.width;
        const y = (e.clientY - cy) / r.height;

        if(raf) cancelAnimationFrame(raf);
        raf = requestAnimationFrame(()=>{
          mascot.style.transform = `translateY(${y*2}px) rotate(${x*1.2}deg)`;
        });
      }
      window.addEventListener('pointermove', onMove, {passive:true});
      window.addEventListener('pointerleave', ()=>{ mascot.style.transform=''; }, {passive:true});
    })();

    // ---------- Initialize defaults ----------
    setFlavor("classic");
    setDisplay("oven","‚Äî"); setDisplay("grill","‚Äî"); setDisplay("pan","‚Äî");
  </script>
</body>
